<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Question DAO -->
    <bean id="questionDao" class="ru.otus.dao.QuestionDaoImpl">
        <constructor-arg value="classpath:questions.csv"/>
    </bean>

    <!-- Question Service -->
    <bean id="questionService" class="ru.otus.services.QuestionServiceImpl">
        <constructor-arg ref="questionDao"/>
    </bean>

    <!-- Testing Service -->
    <bean id="testingService" class="ru.otus.services.TestingServiceImpl">
        <constructor-arg ref="questionService"/>
    </bean>

</beans>